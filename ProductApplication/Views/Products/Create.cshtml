@model PA.Web.ViewModels.Product.ProductEditViewModel

@{
    ViewBag.Title = "Edit Product";
}

<h2>Add Product</h2>

<div class="row">
    <div class="col-xs-12">
        <div class="well">
            <a class="btn btn-primary" href="@Url.Action("Index")">View Products</a>
        </div>
    </div>
</div>

@using (Html.BeginForm("Create", "Products", FormMethod.Post))
{
    <div class="row">
        <div class="col-xs-12">

            @if (Model.Id.HasValue && Model.Id.Value != 0)
            {
                <div class="form-group">
                    <label for="tbox_id">Product Id</label>
                    @Html.TextBoxFor(m => m.Id, new { id = "tbox_id", @class = "form-control", @disabled = "disabled" })
                </div>
            }

            <div class="form-group">
                <label for="tbox_name">Product Name</label>
                @Html.TextBoxFor(m => m.Name, new { id = "tbox_name", @class = "form-control", placeholder = "Product Name" })

            </div>
            <div class="form-group">
                <label for="tbox_category">Product Category</label>
                @Html.TextBoxFor(m => m.Category, new { id = "tbox_category", @class = "form-control", placeholder = "Product Category" })
            </div>

            <div class="form-group">
                <label for="tarea_description">Product Description</label>
                @Html.TextAreaFor(m => m.Description, new { @id = "tarea_description", @class = "form-control", placeholder = "Short Description" })
            </div>

            <div class="form-group">
                <label for="tbox_quantity">Quantity</label>
                @Html.TextBoxFor(m => m.Quantity, new { @id = "tbox_quantity", @class = "form-control", placeholder = "Number of Items" })
            </div>

            <div class="form-group">
                <label for="tbox_price">Price</label>
                @Html.TextBoxFor(m => m.Price, new { @id = "tbox_price", @class = "form-control", placeholder = "Product Price" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="well-sm">
                <input type="submit" class="btn btn-primary" value="Add Product" />
            </div>
        </div>
    </div>
}